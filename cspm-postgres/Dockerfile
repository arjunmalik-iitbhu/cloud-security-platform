FROM --platform=linux/amd64 postgres:18.1-alpine

ENV LANG="en_US.UTF-8"
ENV LC_ALL="en_US.UTF-8"

ENV POSTGRES_INITDB_ARGS '--locale="en_US.utf8" --encoding="UTF8"'

ARG CSPM_DB_PASSWORD=cspm
ARG CSPM_USER_PASSWORD=cspm
ARG CSPM_POSTGRES_PASSWORD
ENV POSTGRES_DB=$CSPM_DB_PASSWORD
ENV POSTGRES_USER=$CSPM_USER_PASSWORD
ENV POSTGRES_PASSWORD=$CSPM_POSTGRES_PASSWORD
